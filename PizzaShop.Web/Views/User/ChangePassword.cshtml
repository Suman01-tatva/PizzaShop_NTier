@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
@model PizzaShop.Entity.ViewModels.ChangePasswordViewModel;

<div class="container-fluid row">
    <h1>Change Password</h1>
    <div class="col-md-5">
        <form asp-action="ChangePassword" asp-controller="User" class="mb-5 needs-validation mt-4" id="loginForm"
            novalidate>
            <div class="d-flex mb-3">
                <input asp-for="CurrentPassword" type="password" class="form-control" id="email"
                    aria-describedby="emailHelp" placeholder="Current Password*" />
                <div class="position-">
                    <i class="fa-solid fa-eye login-icon position-absolute mt-2"></i>
                </div>
            </div>
            <span asp-validation-for="CurrentPassword" class="text-danger mb-3"></span>
            <div class="d-flex mb-3">
                <input asp-for="NewPassword" type="password" class="form-control" id="email"
                    aria-describedby="emailHelp" placeholder="New Password*" />
                <div class="position-">
                    <i class="fa-solid fa-eye login-icon position-absolute mt-2"></i>
                </div>
            </div>
            <span asp-validation-for="NewPassword" class="text-danger mb-3"></span>
            <div class="d-flex mb-3">
                <input asp-for="ConfirmNewPassword" type="password" class="form-control" id="email"
                    aria-describedby="emailHelp" placeholder="Confirm New Password*" />
                <div class="position-">
                    <i class="fa-solid fa-eye login-icon position-absolute mt-2"></i>
                </div>
            </div>
            <span asp-validation-for="ConfirmNewPassword" class="text-danger mb-3"></span>
            <div>
                <input type="submit" value="Change Password">
            </div>
        </form>
    </div>
</div>