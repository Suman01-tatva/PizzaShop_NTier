<div id="AddTablePartial">

</div>
@* Delete Table Model*@
<div class="modal fade" id="deleteTableModal" tabindex="-1" aria-labelledby="deleteTableLable" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h1 class="modal-title fs-5" id="deleteTableLable">
                    Delete Confirmation
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-1">
                <i class="fa-solid fa-triangle-exclamation fa-2xl" style="color: #FFD43B;"></i>
                <p class="fw-bold mb-0">
                    Are you sure you want to delete this table?
                </p>
            </div>
            <div class="modal-footer d-flex justify-content-center border-0">
                <button type="button" id="deleteTableBtn" class="fill-btn">Yes</button>
                <button type="button" class="outline-btn" data-bs-dismiss="modal">
                    No
                </button>
            </div>
        </div>
    </div>
</div>

@* Delete Multiple Table Model*@
<div class="modal fade" id="deleteMultipleTableModal" tabindex="-1" aria-labelledby="deleteTableLable"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h1 class="modal-title fs-5" id="deleteTableLable">
                    Multiple Delete Confirmation
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-1">
                <i class="fa-solid fa-triangle-exclamation fa-2xl" style="color: #FFD43B;"></i>
                <p class="fw-bold mb-0">
                    Are you sure you want to delete these tables?
                </p>
            </div>
            <div class="modal-footer d-flex justify-content-center border-0">
                <button type="button" id="multiDeleteTableBtn" class="fill-btn">Yes</button>
                <button type="button" class="outline-btn" data-bs-dismiss="modal">
                    No
                </button>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        @* Delete Table Script *@
    var deleteTableId;

        $(".deleteTable").click(function () {
            deleteTableId = $(this).val();
            $('#deleteTableModal').modal('show');
        })
        $('#deleteTableBtn').click(function () {
            $.ajax({
                url: '/TableSection/DeleteTable',
                type: 'post',
                data: { id: deleteTableId },
                success: function (response) {
                    if (response == null) {
                        window.location.href = "/Auth/Login";
                        toastr.error("Your Session is Expired. Please Login Again!");
                    }
                    if (response.isSuccess) {
                        GetFilteredItems();
                        toastr.success(response.message);

                    } else {
                        toastr.error(response.message);
                    }
                    $("#deleteTableModal").modal('hide');
                }
            })
        })

        var deleteTableIds = [];
        $('#tableList').on("click", ".tableCheckBox", function () {
            var tableId = $(this).val();
            if (this.checked == true) {
                deleteTableIds.push(parseInt(tableId));
            }
            else {
                deleteTableIds = deleteTableIds.filter(id => id != parseInt(tableId));
            }
        })
        $('#multiDeletTableBtn').click(function () {
            if (deleteTableIds.length == 0) {
                toastr.warning("Select at Least One Item");
            } else {
                $('#deleteMultipleTableModal').modal('show');
            }
        })
        $('#multiDeleteTableBtn').click(function () {
            $.ajax({
                url: '/TableSection/MultiDeleteTable',
                type: 'POST',
                data: {
                    itemIds: deleteTableIds
                },
                success: function (response) {
                    if (response == null) {
                        window.location.href = "/Auth/Login";
                        toastr.error("Your Session is Expired. Please Login Again!");
                    }
                    if (response.isSuccess) {
                        console.log("Delete")
                        GetFilteredItems();
                        toastr.success(response.message);
                    } else {
                        toastr.error(response.message);
                    }
                    $("#deleteMultipleTableModal").modal('hide');
                }
            })
        })

        function GetFilteredItems() {
            @* var SearchString = $("#searchString").val();
            var pageSize = $("#pageSizedropdown").val();
            if (ajaxRequest && ajaxRequest.readyState !== 4) {
                ajaxRequest.abort();
            } *@
                console.log("GetFilteredItems Item");
            ajaxRequest = $.ajax({
                url: "/TableSection/GetAllTables",
                type: "GET",
                    @* data: {
                        categoryId: categoryId,
                        pageIndex: pageIndex,
                        pageSize: pageSize,
                        searchString: SearchString
                    }, *@
                success: function (data) {
                    $("#tableList").html(data);
                }
                })
        }
    $(".addTableBtn").click(function () {
        console.log("Add")
        $.get('@Url.Action("AddNewTable", "TableSection")', function (data) {
            console.log("Add data")
            $("#AddTablePartial").html(data);
            $("#addTableModal").modal('show');
        })
    })
    $(document).on('click', "#submitTableForm", function (event) {
        @* $("#submitTableForm").click(function (event) { *@
            event.preventDefault();
        var form = $("#addNewTableForm");
        console.log("submit form")
        $.ajax({
            url: '/TableSection/AddNewTable',
            type: 'POST',
            data: form.serialize(),
            success: function (response) {
                if (response.success) {
                    console.log("Added")
                    GetFilteredItems();
                    toastr.success(response.message);
                } else {
                    toastr.error(response.message);
                }
                $("#addTableModal").modal('hide');
            },
            error: function (xhr, status, error) {
                showErrorMessage("An error occurred. Please try again.");
            }
        })
    })
    })
</script>